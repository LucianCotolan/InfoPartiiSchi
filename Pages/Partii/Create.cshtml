@page
@model InfoPartiiSchi.Pages.Partii.CreateModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("Create");
}

<h1>@localizer.Get("Create")</h1>

<h4>@localizer.Get("Ski track")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Partie.Nume" class="control-label">@localizer.Get("Name")</label>
                <input asp-for="Partie.Nume" class="form-control" />
                <span asp-validation-for="Partie.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partie.Lungime" class="control-label">@localizer.Get("Track Length")</label>
                <input asp-for="Partie.Lungime" class="form-control" />
                <span asp-validation-for="Partie.Lungime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partie.AltitudineMaxima" class="control-label">@localizer.Get("Maximum Altitude")</label>
                <input asp-for="Partie.AltitudineMaxima" class="form-control" />
                <span asp-validation-for="Partie.AltitudineMaxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partie.AltitudineMinima" class="control-label">@localizer.Get("Minimum Altitude")</label>
                <input asp-for="Partie.AltitudineMinima" class="form-control" />
                <span asp-validation-for="Partie.AltitudineMinima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partie.Dificultate" class="control-label">@localizer.Get("Dificulty")</label>
                <input asp-for="Partie.Dificultate" class="form-control" />
                <span asp-validation-for="Partie.Dificultate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partie.Video" class="control-label">@localizer.Get("LiveFeed")</label>
                <input asp-for="Partie.Video" class="form-control" />
                <span asp-validation-for="Partie.Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partie.StatiuneID" class="control-label">@localizer.Get("Ski resort")</label>
                <select asp-for="Partie.StatiuneID" class="form-control" asp-items="ViewBag.StatiuneID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=@localizer.Get("Create") class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@localizer.Get("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
