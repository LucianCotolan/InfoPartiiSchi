@page
@model InfoPartiiSchi.Pages.Partii.DeleteModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("Delete");
}

<h1>@localizer.Get("Delete")</h1>

<h3>@localizer.Get("Are you sure you want to delete this?")</h3>
<div>
    <h4>@localizer.Get("Ski track")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer.Get("Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Nume)
        </dd>
        <dt class="col-sm-2">
            @localizer.Get("Track Length")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Lungime)
        </dd>
        <dt class="col-sm-2">
            @localizer.Get("Maximum Altitude")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.AltitudineMaxima)
        </dd>
        <dt class="col-sm-2">
            @localizer.Get("Minimum Altitude")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.AltitudineMinima)
        </dd>
        <dt class="col-sm-2">
            @localizer.Get("Dificulty")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Dificultate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Partie.ID" />
        <input type="submit" value=@localizer.Get("Delete") class="btn btn-danger" /> |
        <a asp-page="./Index">@localizer.Get("Back to List")</a>
    </form>
</div>
