@model InfoPartiiSchi.Pages.Partii.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Partie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.Lungime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Lungime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.AltitudineMaxima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.AltitudineMaxima)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.AltitudineMinima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.AltitudineMinima)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.Dificultate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Dificultate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.Video)
        </dt>
        <dd class="col-sm-10">
            <iframe width="560"
                    height="315"
                    src="@Html.DisplayFor(model => model.Partie.Video)"
                    frameborder="0"
                    allowfullscreen>
            </iframe>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partie.Statiune)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partie.Statiune.Nume)
        </dd>
    </dl>
</div>
<div>
    @if (this.User.IsInRole("Admin")) {
        <a asp-page="./Edit" asp-route-id="@Model.Partie.ID">Edit</a> 
     }|
    <a asp-page="./Index">Back to List</a>
</div>
