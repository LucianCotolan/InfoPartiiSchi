@page
@model InfoPartiiSchi.Pages.Statiuni.DeleteModel
@inject CommonLocalizationService localizer
@{
    ViewData["Title"] = localizer.Get("Delete");
}

<h1>@localizer.Get("Delete")</h1>

<h3>@localizer.Get("Are you sure you want to delete this?")</h3>
<div>
    <h4>@localizer.Get("Ski resort")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer.Get("Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Statiune.Nume)
        </dd>
        <dt class="col-sm-2">
            @localizer.Get("County")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Statiune.Judet)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Statiune.ID" />
        <input type="submit" value=@localizer.Get("Delete") class="btn btn-danger" /> |
        <a asp-page="./Index">@localizer.Get("Back to List")</a>
    </form>
</div>
